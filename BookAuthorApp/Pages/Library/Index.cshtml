@page
@model BookAuthorApp.Pages.Library.IndexModel
@{
    ViewData["Title"] = "Library";
}

<h1>Library</h1>

<form method="get" class="mb-3">
    <select asp-for="AuthorId" asp-items="Model.Authors" class="form-select" onchange="this.form.submit()">
        <option value="">All authors</option>
    </select>

    <input asp-for="Title" placeholder="Book title" class="form-control mt-2" />

    <button type="submit" class="btn btn-primary mt-2">Search</button>
    <button type="submit" asp-page-handler="Reset" class="btn btn-secondary mt-2">Reset</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Price</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.PublicationYear</td>
                <td>@book.Price</td>
                <td>
                    <a asp-page="/Authors/Details" asp-route-id="@book.AuthorId">
                        @book.Author!.FirstName @book.Author.LastName
                    </a>
                </td>
                <td>
                    <a asp-page="/Books/Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@book.Id" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


