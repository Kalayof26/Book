@page "{id:int}"
@model BookAuthorApp.Pages.Authors.EditModel

<h1>Edit Author</h1>

<form method="post">
    <input type="hidden" asp-for="Author.Id" />

    <input asp-for="Author.FirstName" class="form-control mb-2" />
    <input asp-for="Author.LastName" class="form-control mb-2" />
    <input asp-for="Author.BirthDate" type="date" class="form-control mb-2" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>


