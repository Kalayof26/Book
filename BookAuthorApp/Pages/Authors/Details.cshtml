@page "{id:int}"
@model BookAuthorApp.Pages.Authors.DetailsModel
@{
    ViewData["Title"] = "Author Details";
}

<div class="card mt-3">
    <div class="card-body">
        <h2 class="card-title">@Model.Author.FirstName @Model.Author.LastName</h2>
        <p><strong>Birth Date:</strong> @(Model.Author.BirthDate?.ToShortDateString() ?? "N/A")</p>
        <h4>Books:</h4>

        @if (!Model.Author.Books.Any())
        {
            <p>No books for this author</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var book in Model.Author.Books)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @book.Title
                        <a asp-page="/Books/Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit Book</a>
                    </li>
                }
            </ul>
        }

        <a asp-page="/Library/Index" class="btn btn-secondary mt-3">Back to Library</a>
    </div>
</div>





