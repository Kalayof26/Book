@page
@model BookAuthorApp.Pages.Authors.DetailsModel

<h2>@Model.Author.FirstName @Model.Author.LastName</h2>
<p>@(Model.Author.BirthDate?.ToShortDateString() ?? "N/A")</p>

@if (!Model.Author.Books.Any())
{
    <p>No books for this author</p>
}
else
{
    <ul>
@foreach (var book in Model.Author.Books)
{
        <li>
            @book.Title
            <a asp-page="/Books/Edit" asp-route-id="@book.Id">Edit Book</a>
        </li>
}
    </ul>
}

<a asp-page="/Library/Index">Back to Library</a>

