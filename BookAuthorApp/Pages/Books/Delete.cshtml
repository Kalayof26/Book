@page "{id:int}"
@model BookAuthorApp.Pages.Books.DeleteModel
@{
    ViewData["Title"] = "Delete Book";
}

<h1>Delete Book</h1>
<p>Are you sure you want to delete <strong>@Model.Book.Title</strong>?</p>
<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
