@page
@model BookAuthorApp.Pages.Books.CreateModel
@{
    ViewData["Title"] = "Create Book";
}

<h1>Create Book</h1>

<form method="post">

    <div class="form-group mb-2">
        <label asp-for="Book.Title"></label>
        <input asp-for="Book.Title" class="form-control" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Book.PublicationYear"></label>
        <input asp-for="Book.PublicationYear" class="form-control" type="number" />
        <span asp-validation-for="Book.PublicationYear" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Book.Price"></label>
        <input asp-for="Book.Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Book.Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Book.ISBN"></label>
        <input asp-for="Book.ISBN" class="form-control" />
        <span asp-validation-for="Book.ISBN" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Book.AuthorId">Author</label>
        <select asp-for="Book.AuthorId" class="form-control" asp-items="Model.AuthorsSelect">
            <option value="">Select an author</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Library/Index" class="btn btn-secondary back-library">Cancel</a>

</form>

<style>
.back-library {
    margin-left: 10px;
    color: #258cfb;
    text-decoration: none;
}
.back-library:hover {
    text-decoration: underline;
}
</style>
